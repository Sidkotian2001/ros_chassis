<?xml version="1.0"?>
<robot name="myrobot2" xmlns:xacro="http://www.ros.org/wiki/xacro">



   <material name="blue">
     <color rgba="0 0 0.8 1"/>
   </material>
   <material name="white">
     <color rgba="1 1 1 1"/>
   </material>
   <material name = "black">
     <color rgba = "0 0 0 1"/>
   </material>
   

   <link name="link_chassis">
    <visual name = "chassis_visual">
      <origin rpy="0 0 0" xyz="0 0 0.03"/>
      <geometry>
        <box size = "0.07 0.07 0.02"/>
      </geometry>
      <material name = "blue"/>
    </visual>

    <collision name = "chassis_collision">
	<origin rpy = "0 0 0" xyz = "0 0 0.03"/>	
        <geometry>
          <box size = "0.07 0.07 0.02"/>
        </geometry>
    </collision>
   
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.00022083" ixy="0" ixz="0" iyy="0.00022083" iyz="0" izz="0.00040833"/>    
    </inertial>	   
   </link>

   <gazebo reference='chasis'>
     <material>Gazebo/Orange</material>
   </gazebo>

   <!-- fornt_right_wheel-->
   <link name = "front_right_wheel">
     <inertial>
       <mass value = "0.2"/>
       <inertia ixx="1.17e-06" ixy="0" ixz="0" iyy="1.17e-06" iyz="0" izz="2.25e-06"/>
      </inertial>

     <visual name = "front_right_wheel_visual">
       <origin rpy = "0 1.5707 0" xyz = "0.019 -0.02 0.015"/>
       <geometry>
          <cylinder length="0.005" radius="0.015"/>
       </geometry>
     </visual>

     <collision name = "front_right_wheel_collision">
	<origin rpy = "0 1.5707 0" xyz = "0.019 -0.02 0.015"/>
	<geometry>
	   <cylinder length="0.005" radius="0.015"/>
	</geometry>
     </collision>

     <material name = "white"/>
    </link>

   <joint name="joint_front_right_wheel" type="continuous">
     <origin rpy="0 0 0" xyz="0.019 -0.02 0.015"/>
     <parent link="link_chassis"/>
     <child link="front_right_wheel"/>
     <axis rpy="0 0 0" xyz="1 0 0"/>
     <limit effort="5" velocity="5"/>
     <joint_properties damping="0.0" friction="0.0"/>
   </joint>

   <!-- gazebo reference="front_right_wheel">
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <material>Gazebo/Grey</material>
   </gazebo-->

   <transmission name="trans_front_right_wheel">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="front_right_wheel_motor">
	<hardwareInterface>VelocityJointInterface</hardwareInterface>
        <mechanicalReduction>7</mechanicalReduction>
      </actuator>
      <joint name="joint_front_right_wheel">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
      </joint>
    </transmission>

   <!-- front_left_wheel"-->
   <link name = "front_left_wheel">
     <visual>
       <origin rpy="0 1.5707 0" xyz="0.0375 0.03 0.015"/>
       <geometry>
          <cylinder length="0.005" radius="0.015"/>
       </geometry>
     </visual>
     
     <collision name = "front_left_wheel_collision">
       <origin rpy="0 1.5707 0" xyz="0.0375 0.03 0.015"/>
       <geometry>
          <cylinder length="0.005" radius="0.015"/>
       </geometry>
     </collision>

     <inertial>
       <mass value="0.2"/>
       <inertia ixx="1.17e-06" ixy="0" ixz="0" iyy="1.17e-06" iyz="0" izz="2.25e-06"/>
     </inertial>
     <material name = "white"/>
   </link>

   <joint name="joint_front_left_wheel" type="continuous">
     <origin rpy="0 0 0" xyz="0.0375 0.03 0.015"/>
     <child link="front_left_wheel"/>
     <parent link="link_chassis"/>
     <axis rpy="0 0 0" xyz="1 0 0"/>
     <limit effort="6" velocity="7"/>
     <joint_properties damping="0.0" friction="0.0"/>
   </joint>

   <transmission name="trans_front_left_wheel">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="front_left_wheel_motor">
	<hardwareInterface>VelocityJointInterface</hardwareInterface>
        <mechanicalReduction>7</mechanicalReduction>
      </actuator>
      <joint name="joint_front_left_wheel">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
      </joint>
    </transmission>

   <!-- back_right_wheel"-->
   <link name = "back_right_wheel">
     <visual>
       <origin rpy="0 1.5707 0" xyz="-0.0375 -0.03 0.015"/>
       <geometry>
          <cylinder length="0.005" radius="0.015"/>
       </geometry>
     </visual>

     <collision>
	<origin rpy="0 1.5707 0" xyz="0.0375 -0.03 0.015"/>
        <geometry>
          <cylinder length="0.005" radius="0.015"/>
        </geometry>
     </collision>

     <inertial>
       <mass value="0.2"/>
       <inertia ixx="1.17e-06" ixy="0" ixz="0" iyy="1.17e-06" iyz="0" izz="2.25e-06"/>
     </inertial>
     <material name = "black"/>
   </link>

   <joint name="joint_back_right_wheel" type="continuous">
     <origin rpy="0 0 0" xyz="0.0375 -0.03 0.015"/>
     <child link="back_right_wheel"/>
     <parent link="link_chassis"/>
     <axis rpy="0 0 0" xyz="1 0 0"/>
     <limit effort="50" velocity="6"/>
     <joint_properties damping="0.0" friction="0.0"/>
   </joint>

   <transmission name="trans_back_right_wheel">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="back_right_wheel_motor">
        <mechanicalReduction>7</mechanicalReduction>
	<hardwareInterface>VelocityJointInterface</hardwareInterface>
      </actuator>
      <joint name="joint_back_right_wheel">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
      </joint>
    </transmission>
   
   <!-- back_left_wheel-->
   <link name = "back_left_wheel">
     <visual>
       <origin rpy="0 1.5707 0" xyz="-0.0375 0.03 0.015"/>
       <geometry>
          <cylinder length="0.005" radius="0.015"/>
       </geometry>
     </visual>

     <collision anme = "back_left_wheel_collision">
	<origin rpy="0 1.5707 0" xyz="-0.0375 0.03 0.015"/>
        <geometry>
          <cylinder length="0.005" radius="0.015"/>
        </geometry>
     </collision>

     <inertial>
       <mass value="0.2"/>
       <inertia ixx="1.17e-06" ixy="0" ixz="0" iyy="1.17e-06" iyz="0" izz="2.25e-06"/>
     </inertial>
     <material name = "black"/>
   </link>
   
   <joint name="joint_back_left_wheel" type="continuous">
     <origin rpy="0 0 0" xyz="-0.0375 0.03 0.015"/>
     <child link="back_left_wheel"/>
     <parent link="link_chassis"/>
     <axis rpy="0 0 0" xyz="1 0 0"/>
     <limit effort="50" velocity="0.5"/>
     <joint_properties damping="0.0" friction="0.0"/>
   </joint>

   <transmission name="trans_back_left_wheel">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="back_left_wheel_motor">
        <mechanicalReduction>7</mechanicalReduction>
	<hardwareInterface>VelocityJointInterface</hardwareInterface>
      </actuator>
      <joint name="joint_back_left_wheel">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
      </joint>
    </transmission>


   <gazebo>
     <plugin name="skid_steer_drive_controller" filename="libgazebo_ros_skid_steer_drive.so">
        <robotNamespace>/</robotNamespace>
        <alwaysOn>true</alwaysOn>
	<updateRate>20</updateRate>
	<leftFrontJoint>joint_front_left_wheel</leftFrontJoint>
	<rightFrontJoint>joint_front_right_wheel</rightFrontJoint>
	<leftRearJoint>joint_back_left_wheel</leftRearJoint>
	<rightRearJoint>joint_back_right_wheel</rightRearJoint>	
	<wheelSeparation>1</wheelSeparation>
	<wheelDiameter>2</wheelDiameter>
	<torque>0.1</torque>
	<commandTopic>cmd_vel</commandTopic>
	<robotBaseFrame>link_chassis</robotBaseFrame>
	<odometryTopic>odom</odometryTopic>
	<odometryFrame>odom</odometryFrame>
	<broadcastTF>1</broadcastTF>
	<covariance_x>0</covariance_x>
	<covariance_y>0</covariance_y>
    	<covariance_yaw>0</covariance_yaw>
	
     </plugin>
   </gazebo>

</robot>
