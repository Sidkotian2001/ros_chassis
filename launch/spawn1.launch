<launch>
  <param name="robot_description" command="cat $(find chassis2)/urdf/chassis2file.urdf.xacro"/>
  <arg name="model" default="$(find chassis2)/urdf/chassis2file.urdf.xacro"/>
  <arg name="rvizconfig" default="$(find urdf_tutorial)/rviz/urdf.rviz" />

  <include file="$(find chassis2)/launch/gazebo.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" />

  <rosparam command="load"
            file="$(find chassis2)/config/joints.yaml"
            ns="r2d2_joint_state_controller" />
  <!-- rosparam command="load"
            file="$(find urdf_sim_tutorial)/config/head.yaml"
            ns="r2d2_head_controller" / -->
  <!-- rosparam command="load"
            file="$(find urdf_sim_tutorial)/config/gripper.yaml"
            ns="r2d2_gripper_controller" / -->
  <rosparam command="load"
            file="$(find chassis2)/config/diffdrive.yaml"
            ns="r2d2_diff_drive_controller" />

  <!-- node name="r2d2_controller_spawner" pkg="controller_manager" type="spawner"
    args="r2d2_joint_state_controller
          r2d2_diff_drive_controller
          -shutdown-timeout 3"/ -->

  <node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
    <param name="default_topic" value="/r2d2_diff_drive_controller/cmd_vel"/>
  </node>
  <node name='robot_state_publisher_gui' pkg='robot_state_publisher' type='robot_state_publisher'/>
	
  <!-- node name='joint_state_publisher_gui' pkg='joint_state_publisher_gui' type='joint_state_publisher_gui'/ -->
</launch>

